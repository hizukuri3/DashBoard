{
  "name": "superstore-dashboard",
  "version": "1.3.3",
  "description": "A beautiful dashboard application that fetches data from Tableau data sources",
  "main": "site/index.html",
  "scripts": {
    "dev": "npx http-server site -p 3000 -o -c-1",
    "start": "npx http-server site -p 3000 -c-1",
    "data:fetch": "node scripts/tableau_fetch_by_luid.mjs 94d2aa4c-d4a4-4328-8cee-2f60334d96e9 ALL",
    "data:enhance": "node scripts/enhance_latest_data.mjs",
    "data:update": "npm run -s data:fetch && npm run -s data:enhance",
    "build": "echo 'No build step required for vanilla JS'",
    "test": "playwright test",
    "test:visual": "node scripts/run-tests-with-monitoring.mjs",
    "test:visual:direct": "playwright test tests/visual/ --project=chromium",
    "test:ui": "playwright test tests/ui/ --project=chromium",
    "test:debug": "playwright test --debug",
    "test:fast": "playwright test tests/visual/ --project=chromium --timeout=15000",
    "test:quick": "playwright test tests/visual/ --project=chromium --timeout=10000",
    "test:clean": "playwright test tests/visual/ --project=chromium --timeout=10000 && pkill -f playwright || true",
    "test:auto-cleanup": "node scripts/run-tests-clean.mjs",
    "test:status": "node scripts/check-test-status.mjs",
    "test:monitor": "node scripts/smart-test-monitor.mjs",
    "test:integrated": "node scripts/run-tests-with-monitoring.mjs",
    "deploy": "git push origin main",
    "lint": "echo 'No linting configured'",
    "format": "prettier --write '**/*.{js,html,css,md,json}'",
    "lint:design": "node scripts/design_system_lint.mjs"
  },
  "keywords": [
    "dashboard",
    "tableau",
    "data-visualization",
    "analytics",
    "web-app"
  ],
  "author": "hizukuri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hizukuri3/SuperstoreDashboard.git"
  },
  "bugs": {
    "url": "https://github.com/hizukuri3/SuperstoreDashboard/issues"
  },
  "homepage": "https://hizukuri3.github.io/SuperstoreDashboard",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "http-server": "^14.1.1",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
